    public void SetMotors(double power) {
    	if(hardStopFront.get() || hardStopBack.get()){
    		tiltMotor.set(0);
    	}
    	else{
    		tiltMotor.set(power);
    	}
    	
    }
    public double GetAngle() {
    	return TiltAngleSensor.getVoltage();
    }
